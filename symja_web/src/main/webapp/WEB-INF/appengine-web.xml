<?xml version="1.0" encoding="UTF-8"?>
<appengine-web-app
	xmlns="http://appengine.google.com/ns/1.0">
	<precompilation-enabled>true</precompilation-enabled>
	<runtime>java25</runtime>
	<app-engine-apis>true</app-engine-apis>
	<instance-class>F2</instance-class>
	<automatic-scaling> 
		<max-idle-instances>2</max-idle-instances>
		<max-instances>4</max-instances>
		<max-concurrent-requests>20</max-concurrent-requests>
	</automatic-scaling>
    <env-variables>
        <env-var name="DEFAULT_ENCODING" value="UTF-8" />
    </env-variables>

	<static-files>
		<include path="/index.html" />
		<include path="/favicon.ico" />
		<include path="/robots.txt" />
		<include path="/opensearch.xml" /> 
		<include path="/en/**.*" expiration="365d" />
		<include path="/app/**.*" />
		<include path="/media/**.*" />
		<include path="/images/**.*" />
		<include path="/static/**.*" />
	</static-files>

	<sessions-enabled>true</sessions-enabled>

	<!-- Configure java.util.logging --> 
	<system-properties>
		<property name="java.util.logging.config.file"
			value="WEB-INF/logging.properties" />
	</system-properties>

</appengine-web-app>