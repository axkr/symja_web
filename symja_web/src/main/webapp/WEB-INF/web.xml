<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
    
<web-app>
  <listener>
  	<listener-class>org.matheclipse.gwt.server.EvalContextListener</listener-class>
  </listener>
 
  <servlet>
		<servlet-name>calc</servlet-name>
		<servlet-class>org.matheclipse.gwt.server.EvaluateServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
		<servlet-name>query</servlet-name>
		<servlet-class>org.matheclipse.gwt.server.AJAXQueryServlet</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>doc</servlet-name>
		<servlet-class>org.matheclipse.gwt.server.AJAXDocServlet</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>org.matheclipse.gwt.server.AdminServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
	<servlet-name>calc</servlet-name> 
	<url-pattern>/calc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>admin</servlet-name>
	<url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>query</servlet-name>
	<url-pattern>/ajax/query/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>doc</servlet-name>
	<url-pattern>/ajax/doc/</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
